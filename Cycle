function calculateTotalChapter(shoppingList: string[]): number {
    let total = 0;

    for (let i = 0; i < shoppingList.length; i++) {
        const litName = shoppingList[i];
        const chapter = getLitChapter(litName);

        if (chapter !== null) {
            total += chapter;
        }
    }
    return total;

    function getLitChapter(name: string): number {
        const litCatalog = [
            {id: 1, name: "Теневой раб", chapter:2715},
            {id: 2, name: "Повелитель тайн", chapter:1430},
            {id: 3, name: "Мать Ученье", chapter:106},
            {id: 4, name: "Начало после конца", chapter:457},
            {id: 5, name: "Злодей хочет жить", chapter:313},
    ];
        for (let i = 0; i < litCatalog.length; i++) {
            if (litCatalog[i].name === name) {
                return litCatalog[i].chapter;
            }
        }
        return 0;
    }
}
const order = ["Теневой раб", "Мать Ученье", "Злодей хочет жить"];

console.log(calculateTotalChapter(order))
